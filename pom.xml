    </dependency>

    <dependency>
      <groupId>io.bitcoinsv.bitcoinjsv</groupId>
      <artifactId>bitcoinj-base</artifactId>
    </dependency>

    <dependency>
      <groupId>com.alibaba</groupId>
      <artifactId>fastjson</artifactId>
    </dependency>

